<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/madeeta</item>
        <item name="android:rotation">-10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="elevation">4dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="text_pemain_com">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/madeeta</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="landing_image">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">@id/guideline</item>
    </style>

    <style name="landing_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/madeeta</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>